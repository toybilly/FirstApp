<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PessoaDetailFragment"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgFeminino"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgMasculino"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_boy"
        app:tint="#3063E4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgFeminino"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_girl"
        app:tint="#EA2ECA"
        app:layout_constraintStart_toEndOf="@+id/imgMasculino"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nascimento:"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imgFeminino"
        app:layout_constraintTop_toBottomOf="@id/tvNome"/>

    <TextView
        android:id="@+id/tvFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Faixa EtÃ¡ria"
        app:layout_constraintStart_toEndOf="@+id/imgFeminino"
        app:layout_constraintTop_toBottomOf="@+id/tvIdade"/>





</androidx.constraintlayout.widget.ConstraintLayout>